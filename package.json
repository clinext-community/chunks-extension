{
  "name": "@clinext/chunks-extension",
  "version": "0.0.0-development",
  "type": "module",
  "description": "Adds generation capacity to CliNext",
  "main": "src/index.json",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clinext-org/chunks-extension.git"
  },
  "keywords": [
    "cliNext",
    "extension"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/clinext-org/chunks-extension.git/issues"
  },
  "homepage": "#readme",
  "peerDependencies": {
    "@clinext/sdk": "*"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "acp": "git add . && npm run commit && git push",
    "commit": "git-cz",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "yarn node --require=dotenv/config --experimental-vm-modules --experimental-specifier-resolution=node $(yarn bin jest) --config ./jest.config.json",
    "test:watch": "react-scripts test --env=jsdom",
    "prepare": "husky install",
    "clinext:license": "cp ./src/LICENSE ./LICENSE 2>/dev/null || :"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {},
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "semantic-release": "^23.0.2",
    "husky": "^8.0.3"
  }
}